@{
    ViewBag.Title = "Login";
}
@{
    Layout = null;
   
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>LOGIN</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    @model Madrasa.Models.User
</head>
<body>
<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body">
          @using (Html.BeginForm("validateUser", "Home", FormMethod.Get, new { @class = "form col-md-12 center-block" }))
          {
          <!--<form class="form col-md-12 center-block" action="/Home/validateUser" method="get"> -->
            <div class="form-group">
              @Html.TextBoxFor(x=>x.username, new { @class="form-control input-lg", id="u", placeholder="Username", name="u" ,required="required"}) <!--<input class="form-control input-lg" placeholder="Email" type="text" name="u">-->
            </div>
              <div class="form-group">@Html.ValidationMessageFor(x => x.username)</div>
            <div class="form-group">
              @Html.TextBoxFor(x=>x.password, new { @class="form-control input-lg", id="p", placeholder="Password", name="p", type="password", required="required" }) @Html.ValidationMessageFor(x => x.password)<!--<input class="form-control input-lg" placeholder="Password" type="password" name="p"-->
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-lg btn-block">Sign In</button>
              <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Need help?</a></span>
            </div>
          
          }
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
		  </div>	
      </div>
  </div>
  </div>
</div>
</body>
    </html>